<Window x:Class="ConfigEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigEditor"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>




<TreeView DockPanel.Dock = "Left" Name="TreeView" ItemsSource="{Binding ChildNodes}" Width="200">
    <TreeView.ItemTemplate>
        <HierarchicalDataTemplate ItemsSource="{Binding ChildNodes }" DataType="{x:Type local:NodeViewModel}" >
            <TextBlock Text="{Binding LocalName}" />
        </HierarchicalDataTemplate>
    </TreeView.ItemTemplate>
</TreeView>
        
        <DockPanel DataContext="{Binding ElementName= TreeView, Path= SelectedItem }">
            <Grid Margin="0,0,0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="{Binding LocalName}" />
               
            </Grid>
        </DockPanel>



    </DockPanel>
</Window>
